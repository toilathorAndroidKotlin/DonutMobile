<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_adaptive"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_adaptive"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonutMobile"
        tools:targetApi="31">
        <activity
            android:name=".UI.Screens.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".UI.Screens.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Screens.AuthActivity"
            android:exported="true" />
    </application>

</manifest>